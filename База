-- Создание таблицы Лекарства
CREATE TABLE Лекарства (
    ID_лекарства SERIAL PRIMARY KEY,
    Наименование VARCHAR(200),
    Форма_выпуска VARCHAR(50),
    Дозировка VARCHAR(50)
);

