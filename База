CREATE TABLE Прививки (
    ID_прививки SERIAL PRIMARY KEY,
    ID_пациента INT,
    Наименование VARCHAR(100),
    Дата_проведения DATE,
    FOREIGN KEY (ID_пациента) REFERENCES Пациенты(ID_пациента)
);

