-- Создание таблицы Диагнозы
CREATE TABLE Диагнозы (
    ID_диагноза SERIAL PRIMARY KEY,
    Код_МКБ VARCHAR(10),
    Наименование VARCHAR(200),
    Описание TEXT
);

