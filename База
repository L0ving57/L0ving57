-- Создание таблицы Пациенты
CREATE TABLE Пациенты (
    ID_пациента SERIAL PRIMARY KEY,
    Фамилия VARCHAR(50),
    Имя VARCHAR(50),
    Отчество VARCHAR(50),
    Дата_рождения DATE,
    Пол CHAR(1),
    Адрес VARCHAR(200),
    Телефон VARCHAR(20)
);

