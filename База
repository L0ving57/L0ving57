-- Создание таблицы Процедуры
CREATE TABLE Процедуры (
    ID_процедуры SERIAL PRIMARY KEY,
    ID_приема INT,
    Вид_процедуры VARCHAR(100),
    Дата_проведения DATE,
    FOREIGN KEY (ID_приема) REFERENCES Приемы(ID_приема)
);

