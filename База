-- Создание таблицы Анализы
CREATE TABLE Анализы (
    ID_анализа SERIAL PRIMARY KEY,
    ID_приема INT,
    Вид_анализа VARCHAR(100),
    Дата_сдачи DATE,
    Результат TEXT,
    FOREIGN KEY (ID_приема) REFERENCES Приемы(ID_приема)
);

