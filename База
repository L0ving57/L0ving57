CREATE TABLE Аллергии (
    ID_аллергии SERIAL PRIMARY KEY,
    ID_пациента INT,
    Аллерген VARCHAR(100),
    Реакция VARCHAR(200),
    FOREIGN KEY (ID_пациента) REFERENCES Пациенты(ID_пациента)
);

