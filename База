-- Создание таблицы Врачи
CREATE TABLE Врачи (
    ID_врача SERIAL PRIMARY KEY,
    Фамилия VARCHAR(50),
    Имя VARCHAR(50),
    Отчество VARCHAR(50),
    Специальность VARCHAR(100),
    Стаж INT
);

