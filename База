-- Создание таблицы Назначения_лекарств
CREATE TABLE Назначения_лекарств (
    ID_назначения SERIAL PRIMARY KEY,
    ID_приема INT,
    ID_лекарства INT,
    Дозировка VARCHAR(50),
    Кратность VARCHAR(50),
    FOREIGN KEY (ID_приема) REFERENCES Приемы(ID_приема),
    FOREIGN KEY (ID_лекарства) REFERENCES Лекарства(ID_лекарства)
);

