-- Создание таблицы Приемы
CREATE TABLE Приемы (
    ID_приема SERIAL PRIMARY KEY,
    ID_пациента INT,
    ID_врача INT,
    Дата_приема DATE,
    Жалобы TEXT,
    Диагноз VARCHAR(200),
    Назначения TEXT,
    FOREIGN KEY (ID_пациента) REFERENCES Пациенты(ID_пациента),
    FOREIGN KEY (ID_врача) REFERENCES Врачи(ID_врача)
);

