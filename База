-- Создание таблицы Хронические_заболевания
CREATE TABLE Хронические_заболевания (
    ID_заболевания SERIAL PRIMARY KEY,
    ID_пациента INT,
    ID_диагноза INT,
    Дата_установления DATE,
    Течение VARCHAR(100),
    FOREIGN KEY (ID_пациента) REFERENCES Пациенты(ID_пациента),
    FOREIGN KEY (ID_диагноза) REFERENCES Диагнозы(ID_диагноза)
);

